<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.mynumnum.drivewire.client.status">
	
	<ui:style>
    	.labelbox { padding-right: 10px; }
    	.drivestatuscontainer { padding: 10px; }
    	.logtext { 	
    		font-family: monospace;
			font-style: normal;
			font-variant: normal;
			font-weight: normal;
			font-size: small;
			line-height: 100%;
			word-spacing: normal;
			letter-spacing: normal;
			text-decoration: none;
			text-transform: none;
			text-align: left;
			text-indent: 0ex;
    		}
	</ui:style>	
	
	<g:HorizontalPanel ui:field="mainPanel">
		<g:VerticalPanel ui:field="leftPanel">
			
			<g:HorizontalPanel>
			
				<g:VerticalPanel addStyleNames='{style.labelbox}'>
					
					<g:Label>Device: </g:Label>	
								
					<g:Label>Last OpCode:</g:Label>
					
					<g:Label>Last GetStat:</g:Label>
					
					<g:Label>Last SetStat:</g:Label>
					
					<g:Label>Last LSN:</g:Label>
					
					<g:Label>Last Drive:</g:Label>
				
						
				</g:VerticalPanel>
					
				<g:VerticalPanel>
					
					<g:HorizontalPanel>
						<g:Label ui:field="device"></g:Label>
						<g:HTML>&nbsp;(</g:HTML>
						<g:Label ui:field="model"></g:Label>
						<g:HTML>&nbsp;)</g:HTML>
					</g:HorizontalPanel>
					
					<g:Label ui:field="lastOpCode"></g:Label>
				
					<g:Label ui:field="lastGetStat"></g:Label>
					
					<g:Label ui:field="lastSetStat"></g:Label>
					
					<g:Label ui:field="lastLsn"></g:Label>
				
					<g:Label ui:field="lastDrive"></g:Label>
				
					
						
				</g:VerticalPanel>
				
			</g:HorizontalPanel>
			
			<g:HorizontalPanel ui:field="driveStatusPanel" addStyleNames='{style.drivestatuscontainer}'>
				<g:FlexTable ui:field="driveStatusFlexTable"></g:FlexTable>
			</g:HorizontalPanel>
			
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="rightPanel">
			<g:HTML ui:field="logLines" addStyleNames='{style.logtext}'></g:HTML>
			<g:HTML><P></P></g:HTML>
			
			<g:Button ui:field="viewLog">View Log...</g:Button>
	
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 