<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.mynumnum.drivewire.client.status">
	<g:HorizontalPanel ui:field="mainPanel">
		<g:VerticalPanel ui:field="leftPanel">
			<g:HorizontalPanel ui:field="lastMessagePanel">
				<g:Label>Last Message:</g:Label>
				<g:Label ui:field="lastMessage"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Last OpCode:</g:Label>
				<g:Label ui:field="lastOpCode"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Last LSN:</g:Label>
				<g:Label ui:field="lastLsn"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Last Drive:</g:Label>
				<g:Label ui:field="lastDrive"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="sectorsPanel">
				<g:VerticalPanel>
					<g:HTML>&nbsp;</g:HTML>
					<g:Label>Read:</g:Label>
					<g:Label>Write:</g:Label>
				</g:VerticalPanel>
				<g:VerticalPanel>
					<g:Label>Sectors</g:Label>
					<g:Label ui:field="readSectors"></g:Label>
					<g:Label ui:field="writeSectors"></g:Label>
				</g:VerticalPanel>			
				<g:VerticalPanel>
					<g:Label>Retries</g:Label>
					<g:Label ui:field="readRetries"></g:Label>
					<g:Label ui:field="writeRetries"></g:Label>
				</g:VerticalPanel>			
				<g:VerticalPanel>
					<g:Label>Good</g:Label>
					<g:Label ui:field="readGood"></g:Label>
					<g:Label ui:field="writeGood"></g:Label>
				</g:VerticalPanel>			
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Last GetStat:</g:Label>
				<g:Label ui:field="lastGetStat"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Last SetStat:</g:Label>
				<g:Label ui:field="lastSetStat"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Device:</g:Label>
				<g:Label ui:field="device"></g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Model:</g:Label>
				<g:Label ui:field="model"></g:Label>
			</g:HorizontalPanel>
			
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="rightPanel">
			<g:HTML>&nbsp;</g:HTML>
			<g:HTML>&nbsp;</g:HTML>
			<g:Button ui:field="viewLog">View Log...</g:Button>
			<g:HTML>&nbsp;</g:HTML>
			<g:Button ui:field="reset">Reset</g:Button>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 