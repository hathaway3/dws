<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:VerticalPanel ui:field="mainPanel">
		<g:HorizontalPanel ui:field="topPanel">
			<g:VerticalPanel ui:field="serialPanel">
				<g:HorizontalPanel>
					<g:Label>Serial</g:Label>
					<g:Label>Serial Device:</g:Label>
					<g:ListBox ui:field="serialDevice"></g:ListBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>CoCo Model:</g:Label>
					<g:ListBox ui:field="cocoModel"></g:ListBox>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="tcpServerPanel">
				<g:Label>TCP Server</g:Label>
				<g:CheckBox>Enabled</g:CheckBox>
				<g:Label>Port:</g:Label>
				<g:TextBox ui:field="port"></g:TextBox>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:VerticalPanel>
			<g:Label>Logging</g:Label>
			<g:HorizontalPanel ui:field="loggingPanel">
				<g:Label>Log Level:</g:Label>
				<g:ListBox ui:field="logLevel"></g:ListBox>
				<g:HTML>&nbsp;</g:HTML>
				<g:CheckBox ui:field="writeToFile">Write To File</g:CheckBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Log File:</g:Label>
				<g:TextBox ui:field="logFileName"></g:TextBox>
				<g:HTML>&nbsp;</g:HTML>
				<g:Button>Choose...</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 