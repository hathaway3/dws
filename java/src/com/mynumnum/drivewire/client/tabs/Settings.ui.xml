<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:VerticalPanel ui:field="mainPanel">
		<g:HorizontalPanel ui:field="topPanel">
			<g:VerticalPanel ui:field="serialPanel">
				<g:HorizontalPanel>
					<g:Label>Serial</g:Label>
					<g:Label>Serial Device:</g:Label>
					<g:ListBox ui:field="serialDeviceListBox"></g:ListBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>CoCo Model:</g:Label>
					<g:ListBox ui:field="cocoModelListBox"></g:ListBox>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			
		</g:HorizontalPanel>
		<g:VerticalPanel>
			<g:Label>Logging</g:Label>
			<g:HorizontalPanel ui:field="loggingPanel">
				<g:Label>Log Level:</g:Label>
				<g:ListBox ui:field="logLevelListBox"></g:ListBox>
				<g:HTML>&nbsp;</g:HTML>
				<g:CheckBox ui:field="writeToFileCheckBox">Write To File</g:CheckBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Log File:</g:Label>
				<g:Label ui:field="logFileNameLabel"></g:Label>
				<g:HTML>&nbsp;</g:HTML>
				<g:Button ui:field="chooseLogFileNameButton">Choose...</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 